mixin nav(mod, items, activeItem)
  - var items = ["Главная", "Обо мне", "Навыки", "Работы", "Отзывы", "Связаться"]

  nav(class=`navigation navigation--${mod}`) 
    ul(class=`navigation__list`)
      each item in items
        li(class=`navigation__item`) 
          a(href="#" class=`navigation__link`)= item

+nav('header')