.nav-adm {
  height: 80px;
  color: #383bcf;
}
.nav-adm__list {
  height: 80px;
  display: flex;
}
.nav-adm-list__item {
  padding: 0 20px;
  height: 100%;
  display: flex;
  align-items: center;
  border: 3px solid transparent;
    &:hover {
      border-bottom: 3px solid #383bcf;
      cursor: pointer;
    }
}
.nav-adm-list__item-link {
  color: inherit;
  text-decoration: inherit;
}